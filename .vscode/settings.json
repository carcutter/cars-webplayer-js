{
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  "prettier.configPath": ".prettierrc",

  "files.associations": {
    "**/packages/core-ui/**/*.css": "tailwindcss",
    "**/apps/demo-next/**/*.css": "tailwindcss",
    "**/apps/showroom/**/*.css": "tailwindcss"
  },
  "cSpell.words": [
    "carcutter",
    "dryrun",
    "hfov",
    "hotspot",
    "hotspots",
    "jakejarvis",
    "lerp",
    "mskelton",
    "ncipollo",
    "pannellum",
    "pnlm",
    "rior",
    "webplayer",
    "XYmap",
    "zoomable"
  ]
}
