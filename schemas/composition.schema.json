{
  "$ref": "#/definitions/composition",
  "definitions": {
    "composition": {
      "type": "object",
      "properties": {
        "aspectRatio": {
          "type": "string",
          "enum": [
            "4:3",
            "16:9"
          ]
        },
        "imageHdWidth": {
          "type": "number",
          "minimum": 24,
          "maximum": 3840
        },
        "imageSubWidths": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/composition/properties/imageHdWidth"
          }
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "items": {
                "type": "array",
                "items": {
                  "anyOf": [
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "const": "image"
                        },
                        "src": {
                          "type": "string"
                        },
                        "hotspots": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "feature": {
                                "type": "string"
                              },
                              "position": {
                                "type": "object",
                                "properties": {
                                  "x": {
                                    "type": "number"
                                  },
                                  "y": {
                                    "type": "number"
                                  }
                                },
                                "required": [
                                  "x",
                                  "y"
                                ],
                                "additionalProperties": false
                              },
                              "description": {
                                "type": "object",
                                "properties": {
                                  "short": {
                                    "type": "string"
                                  },
                                  "long": {
                                    "type": "string"
                                  }
                                },
                                "required": [
                                  "short"
                                ],
                                "additionalProperties": false
                              },
                              "detail": {
                                "type": "object",
                                "properties": {
                                  "type": {
                                    "type": "string",
                                    "enum": [
                                      "image",
                                      "link",
                                      "pdf"
                                    ]
                                  },
                                  "src": {
                                    "type": "string"
                                  }
                                },
                                "required": [
                                  "type",
                                  "src"
                                ],
                                "additionalProperties": false
                              }
                            },
                            "required": [
                              "feature",
                              "position"
                            ],
                            "additionalProperties": false
                          }
                        }
                      },
                      "required": [
                        "type",
                        "src"
                      ],
                      "additionalProperties": false
                    },
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "const": "video"
                        },
                        "src": {
                          "type": "string"
                        },
                        "poster": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "type",
                        "src",
                        "poster"
                      ],
                      "additionalProperties": false
                    },
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "const": "360"
                        },
                        "images": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        "hotspots": {
                          "type": "array",
                          "items": {
                            "type": "array",
                            "items": {
                              "$ref": "#/definitions/composition/properties/categories/items/properties/items/items/anyOf/0/properties/hotspots/items"
                            }
                          }
                        }
                      },
                      "required": [
                        "type",
                        "images",
                        "hotspots"
                      ],
                      "additionalProperties": false
                    },
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "const": "omni_directional"
                        },
                        "src": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "type",
                        "src"
                      ],
                      "additionalProperties": false
                    }
                  ]
                }
              }
            },
            "required": [
              "id",
              "title",
              "items"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "aspectRatio",
        "imageHdWidth",
        "imageSubWidths",
        "categories"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}